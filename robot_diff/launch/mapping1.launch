<launch>
  <!-- Launch the freenect driver -->
  <node pkg="freenect_launch" type="freenect.launch" name="kinect_driver" output="screen">
    <!-- Remap frame_id to match URDF -->
    <remap from="camera_depth_frame" to="camera_link"/>
    <remap from="camera_rgb_frame" to="camera_rgb_frame"/>
    <remap from="camera_depth_optical_frame" to="camera_depth_optical_frame"/>
  </node>

  <!-- Publish static transform from base_link to camera_link -->
  <node pkg="tf" type="static_transform_publisher" name="base_to_camera" args="0 0 0.1 0 0 0 base_link camera_link 100" />

</launch>